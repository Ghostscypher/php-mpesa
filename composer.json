{
    "name": "hackdelta/mpesa",
    "description": "Php library to wrap around mpesa APIs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ghostscypher",
            "email": "bngetich69@gmail.com"
        }
    ],
    "keywords": [
        "mpesa",
        "php",
        "hackdelta"
    ],
    "require": {
        "php": "7.2|^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Hackdelta\\Mpesa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hackdelta\\Mpesa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
